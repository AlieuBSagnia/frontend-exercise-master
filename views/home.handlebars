<div class="responsiveHeader">
    <img src={{article.post.image}} style="object-fit: cover;" class="img-fluid responsiveHeader__image"
        alt="The Image for article cover">
</div>
<section class="heading">
    <h1 class="heading__heading">{{article.post.title}}</h1>
    <h6 class="heading__subHeading">{{article.post.standfirst}}</h6>
    <p>{{formatDate article.post.date 'dddd D MMMM YYYY HH:mm a'}}</p>
</section>
<section class="content">
    <div class="content__leftContainer">
        <div class="content__leftContainer__coverImage">
            <img src={{article.post.image}} class="img-fluid" alt="The Image for article cover">
        </div>
        <div class="content__leftContainer__content">
            {{{article.post.body}}}
            <div class="commentSection ">
                {{!-- <div class="col-lg-4 col-md-4"> --}}
                    <div class="commentSection__headingLeft">
                        {{!-- <div class="row"> --}}
                            
                            <p> <img src="https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/160/microsoft/209/speech-balloon_1f4ac.png"
                                    alt="" class="comment__icon"> </p>
                            <h6 class="totalComments"> {{comments.length}} Comments</h6>
                        </div>
                        {{!--
                    </div> --}}
                    {{!-- <div class="col-lg-3 col-md-3 ml-auto"> --}}
                        {{!-- <div class="row justify-content-end"> --}}
                            <div class="commentSection__headingRight">
                                <h6>Sort: <a onclick="filterLikes()">Likes</a> | <a onclick="filterTime()">Newest</a>
                                </h6>
                            </div>
                            {{!--
                        </div> --}}
                    </div>

                    {{#each comments}}

                    <div id="comments">
                        <div class="comments__comment">
                            <div class="comments__comment__heading">
                                <div>
                                    <h6 class="comments__comment__username ">{{this.name}}</h6>
                                    <small class="comments__comment__date">{{formatDate this.date 'dddd D MMMM YYYY
                                        HH:mm a'}}</small>
                                </div>
                                <div class="comments_comment_like">
                                    <h6 class="">{{this.likes}} likes</h6>
                                </div>
                            </div>
                            <div class="comments__comment__content">
                                <p>{{this.body}}</p>
                            </div>
                        </div>
                    </div>

                    {{/each}}
                </div>
            </div>
            {{!--
        </div> --}}

        {{!--
    </div> --}}

    <div class="readMore">
        <h3>More Stories </h3>
        {{#each posts.posts}}

        <div class="readMore__content">


            <div class="readMore__content__thumbnail">
                {{!-- <div class="col-lg-3 col-md-3"> --}}
                    <img src={{this.thumbnail}} alt="The Image for article cover">
                </div>
                {{!-- <div class="col-lg-9 col-md-9"> --}}
                    <div class="readMore__content__content">
                        <h6 class="text-wrap">{{this.title}}</h6>
                        <span class="readmore">Read More</span>
                    </div>
                </div>

                {{/each}}

            {{!--
        </div> --}}
        {{!--
    </div> --}}
    {{!-- </div> --}}
    </div>

</section>

